<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>All movies</h1>
      <ul class="list-group mb-3">
        <% @movies.each do |movie| %>
          <li class="list-group-item">
            <%= render movie %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
